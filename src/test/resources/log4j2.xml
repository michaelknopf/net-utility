<Configuration monitorInterval="60" debug="false">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    %highlight{[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n}
                </pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <!--<Logger name="utility" level="info">-->
            <!--<AppenderRef ref="ConsoleAppender"/>-->
        <!--</Logger>-->
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>